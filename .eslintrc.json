{
    "env": {
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "extends": ["eslint:recommended", "plugin:jsdoc/recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["jest", "jsdoc"],
    "rules": {
        "jsdoc/no-undefined-types": "off",
        "jsdoc/valid-types": "off"
    },
    "settings": {
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
